{
  "include": ["./src/*", "types"],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es6"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
